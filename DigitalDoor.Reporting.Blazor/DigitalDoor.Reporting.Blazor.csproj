<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <Authors>Sergi Ortiz Gomez, Angel Guiao</Authors>
    <Company>DIGITAL DOOR Pty Ltd</Company>
    <Description>Provide a components to render,print and preview the reports Generated by DigitalDoor.Reporting with Blazor Components.</Description>
    <Copyright>DIGITAL DOOR Pty Ltd 2022</Copyright>
    <PackageProjectUrl>https://digitaldoor.com.au/</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>reporting; blazor; pdf</PackageTags>
    <PackageReleaseNotes>Improved the image quality. RC 1</PackageReleaseNotes>
    <Version>0.7.28</Version>
    <Title>Digital Door Reporting Viewer</Title>
    <PackageIcon>DRIcon.png</PackageIcon>
  </PropertyGroup>

	<ItemGroup>
		<None Include="..\DRIcon.png">
		  <Pack>True</Pack>
		  <PackagePath>\</PackagePath>
		</None>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\License.txt">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DigitalDoor.Reporting.Entities" Version="0.7.21" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.6" />
  </ItemGroup>

</Project>
